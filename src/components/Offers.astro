---
import ImageCard from "./ImageCard.astro";
const offers = [
    {
        imageURL:"pexels-david-bartus-43782-963278.jpg",
        offerText:"Tour Studio"
    },
    {
        imageURL:"pexels-leofallflat-1089194.jpg",
        offerText:"CHECK OUT OUR AVAILABLE PRODUCT"
    },
    {
        imageURL:"pexels-mccutcheon-1209843.jpg",
        offerText:"ASK ABOUT CUSTOM DESIGN"
    }
]
---


<section class="py-12 text-center">
<h1 class="yellowText text-5xl italic uppercase">What we offer</h1>
<p class="text-white">We're committed to bringing you the best design experience</p>
<div class="grid grid-cols-1 md:grid-cols-3">
{
    offers.map((offer)=>(
        <ImageCard imageURL={offer.imageURL} text={offer.offerText} />
    ))
}

</div>
</section>